    <% if(bags.length != 0){%>
    <div id="maincart">
      <div id="cartdiv">
        <div id="tabledata">
          <table>
            <thead>
              <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub-Total</th>
              </tr>
            </thead>
            <tbody>
              <!-- Append el  -->
              <% bags.map(function(bag){%>
              <tr>
                <td>
                  <img class="image" src="<%=bag.productId.images[0] %>" />
                </td>
                <td><p><%=bag.productId.name %></p></td>
                <td><p><%=bag.productId.price%></p></td>
                <td>
                  <div>
                    <select
                      class="select_qty"
                      onchange="getquantity(this.value , '<%= JSON.stringify(bag)%>')"
                    >
                      <option value="1"><%=bag.quantity%></option>
                      <% if(bag.quantity != 1){%>
                      <option value="1">1</option>
                      <%}%> <% if(bag.quantity != 2){%>
                      <option value="2">2</option>
                      <%}%> <% if(bag.quantity != 3){%>
                      <option value="3">3</option>
                      <%}%> <% if(bag.quantity != 4){%>
                      <option value="4">4</option>
                      <%}%> <% if(bag.quantity != 5){%>
                      <option value="5">5</option>
                      <%}%>
                    </select>
                  </div>
                  <p class="edit">Edit</p>
                </td>
                <td>
                  <p class="sTotal">
                    <%= "₹"+(+bag.productId.price.slice(1).replace(',', '') *
                    bag.quantity)+".00"%>
                  </p>
                  <p
                    class="edit"
                    onclick="removeItem('<%= JSON.stringify(bag)%>')"
                  >
                    Remove
                  </p>
                </td>
              </tr>
              <% })%>
            </tbody>
          </table>
        </div>
      </div>

      <div id="promocode">
        <div id="promodiv">
          <h4>Promo Code</h4>
          <hr style="background: #707070; height: 0.2px; border: 0" />

          <input type="text" placeholder="Promo Code" id="code" />
          <button id="apply">APPLY</button>
        </div>
        <div id="orderdiv">
          <h4>Order Summary</h4>
          <hr style="background: #707070; height: 0.2px; border: 0" />

          <div id="subTotal">
            <p>Sub-Total</p>
            <p id="Price"><%= sum %></p>
          </div>
          <div id="Total">
            <p>Total</p>
            <p id="Price2"><%= sum %></p>
          </div>
        </div>

        <a href="checkout.html">
          <button id="checkoutbtn">CONTINUE TO CHECKOUT</button></a
        >
      </div>
    </div>
    <%} else {%>
