<script>
  //product remove
  function removeItem(product) {
    var product = JSON.parse(product);
    let id = product._id;
    fetch("/cart/" + id, {
      method: "DELETE",
    })
      .then((res) => {
        return res.json();
      })
      .then((res) => console.log(res));
    window.location.reload();
  }

  //product update
  function getquantity(quantity, product) {
    var product = JSON.parse(product);
    let id = product._id;
    fetch("/cart/" + id, {
      method: "PATCH",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        quantity,
      }),
    })
      .then((res) => {
        return res.json();
      })

      .then((res) => console.log(res));
    window.location.reload();
  }
</script>
